{

  "manifest_version": 2,
  "name": "Clickloader",
  "version": "1.0.10",

  "description": "Simple extension for downloading media content by just clicking on it",
  "homepage_url": "https://github.com/ismorozs/clickloader",

  "icons": {
    "16": "icons/c16.png",
    "19": "icons/c19.png",
    "32": "icons/c32.png",
    "48": "icons/c48.png",
    "64": "icons/c64.png",
    "128": "icons/c128.png"
  },

  "permissions": [
    "<all_urls>",
    "tabs",
    "downloads",
    "storage"
  ],

  "background": {
    "scripts": ["background-script.js"]
  },

  "browser_action": {
    "default_icon": "icons/c48.png",
    "default_title": "Clickloader (inactive)"
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+1",
        "mac": "Ctrl+Shift+1"
      }
    }
  },

  "options_ui": {
    "page": "options/options.html"
  },

  "author": "Igor Morozov"
}
